<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body class="index">
    <header>
        <h1>Plant Manager</h1>
        <ul>
            <li><a href="/plants/propagate" class="index">Add a New Plant</a></li>
            <li>Log In</li>
        </ul>
    </header>
    <main class="index">
        <% plants.forEach(plant => { %>
            <div class="index">
                <p class="index-name"><%= plant.name %></p>
                <a href="/plants/<%= plant.id %>"><img src="<%= plant.img %>" class="index"/></a>
                <a href="/plants/<%= plant._id %>/edit" class="btn">Edit</a>   
            <form action="/plants/<%=plant.id %>?_method=DELETE" method="POST">
            <input class="btn" type="submit" value="Delete">
            </form> 
            </div>
      <%  }) %>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>